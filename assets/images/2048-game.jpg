<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200">
  <defs>
    <linearGradient id="num2Grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fef3c7;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#fbbf24;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="num4Grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fed7aa;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#fb923c;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="num8Grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fecaca;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#ef4444;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="num16Grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ddd6fe;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="num32Grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#dbeafe;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="num2048Grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="gameBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f59e0b;stop-opacity:0.1"/>
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:0.2"/>
    </linearGradient>
    <filter id="numGlow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- 背景 -->
  <rect width="300" height="200" fill="#0f172a"/>
  <rect width="300" height="200" fill="url(#gameBg)"/>
  
  <!-- 游戏网格背景 -->
  <rect x="75" y="50" width="150" height="150" fill="#475569" rx="8"/>
  <rect x="80" y="55" width="140" height="140" fill="#334155" rx="4"/>
  
  <!-- 网格线 -->
  <g stroke="#475569" stroke-width="2" fill="none">
    <line x1="115" y1="55" x2="115" y2="195"/>
    <line x1="150" y1="55" x2="150" y2="195"/>
    <line x1="185" y1="55" x2="185" y2="195"/>
    <line x1="80" y1="90" x2="220" y2="90"/>
    <line x1="80" y1="125" x2="220" y2="125"/>
    <line x1="80" y1="160" x2="220" y2="160"/>
  </g>
  
  <!-- 数字方块 -->
  <g filter="url(#numGlow)">
    <!-- 第一行 -->
    <rect x="85" y="60" width="25" height="25" fill="url(#num2Grad)" rx="4"/>
    <text x="97.5" y="77" text-anchor="middle" fill="#78716c" font-size="14" font-weight="bold" font-family="Arial">2</text>
    
    <rect x="120" y="60" width="25" height="25" fill="url(#num4Grad)" rx="4"/>
    <text x="132.5" y="77" text-anchor="middle" fill="#78716c" font-size="14" font-weight="bold" font-family="Arial">4</text>
    
    <rect x="155" y="60" width="25" height="25" fill="url(#num8Grad)" rx="4"/>
    <text x="167.5" y="77" text-anchor="middle" fill="#fff" font-size="14" font-weight="bold" font-family="Arial">8</text>
    
    <!-- 第二行 -->
    <rect x="85" y="95" width="25" height="25" fill="url(#num16Grad)" rx="4"/>
    <text x="97.5" y="112" text-anchor="middle" fill="#fff" font-size="12" font-weight="bold" font-family="Arial">16</text>
    
    <rect x="120" y="95" width="25" height="25" fill="url(#num32Grad)" rx="4"/>
    <text x="132.5" y="112" text-anchor="middle" fill="#fff" font-size="12" font-weight="bold" font-family="Arial">32</text>
    
    <!-- 第三行 -->
    <rect x="155" y="130" width="25" height="25" fill="url(#num4Grad)" rx="4"/>
    <text x="167.5" y="147" text-anchor="middle" fill="#78716c" font-size="14" font-weight="bold" font-family="Arial">4</text>
    
    <rect x="190" y="130" width="25" height="25" fill="url(#num2Grad)" rx="4"/>
    <text x="202.5" y="147" text-anchor="middle" fill="#78716c" font-size="14" font-weight="bold" font-family="Arial">2</text>
    
    <!-- 第四行 -->
    <rect x="120" y="165" width="25" height="25" fill="url(#num8Grad)" rx="4"/>
    <text x="132.5" y="182" text-anchor="middle" fill="#fff" font-size="14" font-weight="bold" font-family="Arial">8</text>
  </g>
  
  <!-- 高亮的2048方块 -->
  <g transform="translate(240, 80)" filter="url(#numGlow)">
    <rect x="0" y="0" width="40" height="40" fill="url(#num2048Grad)" rx="6" stroke="#fbbf24" stroke-width="2"/>
    <text x="20" y="24" text-anchor="middle" fill="#78716c" font-size="12" font-weight="bold" font-family="Arial">2048</text>
  </g>
  
  <!-- 合并动画效果 -->
  <g opacity="0.6">
    <circle cx="97.5" cy="72.5" r="20" fill="none" stroke="#fbbf24" stroke-width="2" stroke-dasharray="5,5">
      <animateTransform attributeName="transform" attributeType="XML" type="rotate" from="0 97.5 72.5" to="360 97.5 72.5" dur="2s" repeatCount="indefinite"/>
    </circle>
  </g>
  
  <!-- 装饰元素 -->
  <g fill="#fbbf24" opacity="0.4">
    <polygon points="30,40 32,46 38,46 33,50 35,56 30,52 25,56 27,50 22,46 28,46" transform="scale(0.6)"/>
    <polygon points="270,150 272,156 278,156 273,160 275,166 270,162 265,166 267,160 262,156 268,156" transform="scale(0.5)"/>
  </g>
  
  <!-- 标题 -->
  <text x="150" y="30" text-anchor="middle" fill="#f59e0b" font-size="24" font-weight="bold" font-family="Arial">2048</text>
  
  <!-- 分数 -->
  <text x="40" y="80" text-anchor="middle" fill="#94a3b8" font-size="10" font-family="Arial">SCORE</text>
  <text x="40" y="95" text-anchor="middle" fill="#22c55e" font-size="16" font-weight="bold" font-family="Arial">4096</text>
  
  <!-- 最佳分数 -->
  <text x="40" y="115" text-anchor="middle" fill="#94a3b8" font-size="10" font-family="Arial">BEST</text>
  <text x="40" y="130" text-anchor="middle" fill="#f59e0b" font-size="16" font-weight="bold" font-family="Arial">8192</text>
</svg> 