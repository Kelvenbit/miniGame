<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200">
  <defs>
    <linearGradient id="tetrisGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#1e40af;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="tetrisGrad2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ef4444;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#dc2626;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="tetrisGrad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#22c55e;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#16a34a;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="tetrisGrad4" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f59e0b;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="tetrisBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:0.1"/>
      <stop offset="100%" style="stop-color:#1e3a8a;stop-opacity:0.2"/>
    </linearGradient>
    <filter id="blockGlow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- 背景 -->
  <rect width="300" height="200" fill="#0f172a"/>
  <rect width="300" height="200" fill="url(#tetrisBg)"/>
  
  <!-- 游戏边框 -->
  <rect x="100" y="30" width="100" height="140" fill="none" stroke="#475569" stroke-width="2" rx="4"/>
  
  <!-- 底部方块堆叠 -->
  <g filter="url(#blockGlow)">
    <!-- 第一层 -->
    <rect x="105" y="155" width="15" height="15" fill="url(#tetrisGrad1)" rx="2"/>
    <rect x="120" y="155" width="15" height="15" fill="url(#tetrisGrad2)" rx="2"/>
    <rect x="135" y="155" width="15" height="15" fill="url(#tetrisGrad3)" rx="2"/>
    <rect x="150" y="155" width="15" height="15" fill="url(#tetrisGrad4)" rx="2"/>
    <rect x="165" y="155" width="15" height="15" fill="url(#tetrisGrad1)" rx="2"/>
    <rect x="180" y="155" width="15" height="15" fill="url(#tetrisGrad2)" rx="2"/>
    
    <!-- 第二层 -->
    <rect x="105" y="140" width="15" height="15" fill="url(#tetrisGrad3)" rx="2"/>
    <rect x="120" y="140" width="15" height="15" fill="url(#tetrisGrad4)" rx="2"/>
    <rect x="150" y="140" width="15" height="15" fill="url(#tetrisGrad1)" rx="2"/>
    <rect x="165" y="140" width="15" height="15" fill="url(#tetrisGrad2)" rx="2"/>
    <rect x="180" y="140" width="15" height="15" fill="url(#tetrisGrad3)" rx="2"/>
    
    <!-- 第三层 -->
    <rect x="120" y="125" width="15" height="15" fill="url(#tetrisGrad2)" rx="2"/>
    <rect x="135" y="125" width="15" height="15" fill="url(#tetrisGrad4)" rx="2"/>
    <rect x="165" y="125" width="15" height="15" fill="url(#tetrisGrad1)" rx="2"/>
  </g>
  
  <!-- 下落的方块（T型） -->
  <g filter="url(#blockGlow)" opacity="0.9">
    <rect x="135" y="60" width="15" height="15" fill="url(#tetrisGrad4)" rx="2"/>
    <rect x="120" y="75" width="15" height="15" fill="url(#tetrisGrad4)" rx="2"/>
    <rect x="135" y="75" width="15" height="15" fill="url(#tetrisGrad4)" rx="2"/>
    <rect x="150" y="75" width="15" height="15" fill="url(#tetrisGrad4)" rx="2"/>
  </g>
  
  <!-- 下一个方块预览（L型） -->
  <g transform="translate(220, 50)" opacity="0.7">
    <rect x="0" y="0" width="12" height="12" fill="url(#tetrisGrad2)" rx="2"/>
    <rect x="0" y="12" width="12" height="12" fill="url(#tetrisGrad2)" rx="2"/>
    <rect x="0" y="24" width="12" height="12" fill="url(#tetrisGrad2)" rx="2"/>
    <rect x="12" y="24" width="12" height="12" fill="url(#tetrisGrad2)" rx="2"/>
  </g>
  
  <!-- 装饰星星 -->
  <g fill="#fbbf24" opacity="0.6">
    <polygon points="50,50 52,56 58,56 53,60 55,66 50,62 45,66 47,60 42,56 48,56" transform="scale(0.8)"/>
    <polygon points="250,130 252,136 258,136 253,140 255,146 250,142 245,146 247,140 242,136 248,136" transform="scale(0.6)"/>
  </g>
  
  <!-- 标题文字 -->
  <text x="150" y="25" text-anchor="middle" fill="#3b82f6" font-size="20" font-weight="bold" font-family="Arial">TETRIS</text>
  <text x="150" y="190" text-anchor="middle" fill="#94a3b8" font-size="12" font-family="Arial">经典俄罗斯方块</text>
  
  <!-- 分数显示 -->
  <text x="230" y="35" text-anchor="middle" fill="#94a3b8" font-size="10" font-family="Arial">SCORE</text>
  <text x="230" y="45" text-anchor="middle" fill="#22c55e" font-size="14" font-weight="bold" font-family="Arial">1250</text>
</svg> 